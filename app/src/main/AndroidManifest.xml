        <activity
            android:name=".ForumRules"
            android:label="Forum Rules" />
        <activity
            android:name=".ForumActivity"
            android:label="Forum" />
        <activity android:name=".GameTwo" />
        <activity
            android:name=".CarbonQuizActivity"
            android:label="Carbon Foot Print Quiz" />
        <activity
            android:name=".GameActivity"
            android:label="@string/game_name" />
        <activity
            android:name=".SecondActivity"
            android:label="Activity Selection Page" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
